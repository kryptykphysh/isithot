<div class="hero min-h-screen" style="background-image: url(https://placeimg.com/1000/800/arch);">
  <div class="hero-overlay bg-opacity-60"></div>
  <div class="hero-content text-center text-neutral-content">
    <div class="max-w-full flex flex-col space-y-3">
      <h1 id="weather_report" class="mb-5 text-5xl font-bold">Welcome to "Is It Hot?"</h1>
      <%= render partial: "temperature_definitions/form", locals: { temperature_definition: @temperature_definition } %>
      <%= render partial: "weather_api/form", locals: { max_warm: @temperature_definition.max, min_warm: @temperature_definition.min } %>
    </div>
  </div>
</div>
